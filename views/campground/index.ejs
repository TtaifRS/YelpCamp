<%- include('../partials/header') -%>

<div class="container">
    <header class="jumbotron">
        <div class="container">
            <h1>Welcome to Campgrounds Page</h1>
            <p>View our Hand-Picked Campground From All Over The World</p>
            <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add New Campground</a>
        </div>
    </header>    
    <div class="row">
        <div class="col-lg-12">
            <p class="lead">Our Most Famous Campgrounds</p>
        </div>
        <% campgrounds.forEach(function(campground){ %>
            <div class="col-md-3 col-sm-6">   
                <img src="<%= campground.image %>" class="img-fluid img-thumbnail">
                <div class="card-title">
                    <h4><%= campground.name %></h4>
                </div>
                <a class="btn btn-primary" href="/campgrounds/<%=campground._id %>">Show More</a>
            </div>   
            <% }) %>
    </div>
</div>    

<%- include('../partials/footer') -%>