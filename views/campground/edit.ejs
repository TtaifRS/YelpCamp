<%- include('../partials/header') -%>

<div class="container">
    <div class="row">
        <h1 style="text-align: center; width: 100%;">Edit <%= campground.name %></h1>
        <div style="width: 30%; margin: 25px auto;">
            <form action="/campgrounds/<%= campground._id %>?_method=PUT" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" value="<%= campground.name %>">
                </div>
                <div class = "form-group">  
                    <input type="text" class="form-control" name="campground[image]" value = "<%= campground.image %>">
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]"><%= campground.description %></textarea>
                </div>
                <div class = "form-group">    
                    <input type="submit" class="btn btn-success btn-lg btn-block" value="SUBMIT">
                </div>
                
            </form>
        <a href="/campgrounds">Go Back</a>   
        </div>    
        
    </div>   
</div>
<%- include('../partials/footer') -%>